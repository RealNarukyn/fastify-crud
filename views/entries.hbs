<section id="section-add-entry" class="section-add">
    <div class="card custom-add-card">
        <div class="card-body">
            <h4 class="card-title"><b>Add a new entry</b></h4>

            <form action="/entries/add" method="POST">

                <div class="form-group">
                    <label for="titleInput"><b>Title</b></label>
                    <input type="text" class="form-control" id="titleInput" name="title" placeholder="Enter Title"
                        required>
                    <small id="emailHelp" class="form-text text-muted">It's better if you use a fancy title...</small>
                </div>

                <div class="mb-3">
                    <label for="descriptionInput"><b>Description</b></label>
                    <textarea class="form-control" id="descriptionInput" name="description"
                        placeholder="A short description about the entry you're about to create..." required></textarea>
                </div>

                <div class="form-group">
                    <label for="categoryInput"><b>Category</b></label>
                    <select id="categoryInput" name="category" class="form-control" required>
                        {{#each categories}}
                        <option value={{this._id}}>{{this.category}}</option>
                        {{/each}}
                    </select>
                </div>

                <button type="submit" class="btn btn-success">Submit</button>
            </form>

        </div>
    </div>

</section>

<hr />
<section id="section-entries" class="container">
    <div class="row">
        <h3 class="col">Entries List</h3>
        <form class="col-md-3" action="/entries" method="POST">
            <label>Search by:</label>
            <select id="categoryInput" name="category" class="form-control search-select" required>
                {{#each categories}}
                <option value={{this._id}}>{{this.category}}</option>
                {{/each}}
            </select>
            <button type="submit" class="btn search-btn">
                <img src="/static/img/search.svg" class="search-img">
            </button>
        </form>
    </div>

    <div class="row custom-row">
        {{#each data}}
        {{#with this}}
        {{> entry}}
        {{/with}}
        {{/each}}
    </div>
</section>